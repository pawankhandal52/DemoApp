<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".activity.ForgotPassword">
    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            app:contentInsetEnd="0dp"
            android:background="@color/app_color"
            android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="match_parent"
                      android:gravity="center"
                        android:layout_height="wrap_content">
            <ImageView android:layout_width="wrap_content"
                       android:id="@+id/iv_back"
                       android:layout_alignParentLeft="true"
                       android:src="@drawable/back"
                       android:clickable="true"
                       android:background="?selectableItemBackgroundBorderless"
                       android:layout_centerVertical="true"
                       android:layout_height="wrap_content"/>
            <TextView android:layout_width="match_parent"
                      android:text="Forgot Password"
                      android:gravity="center"
                      android:layout_centerVertical="true"
                      android:textColor="@android:color/white"
                      android:layout_height="?actionBarSize"/>
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>
    <View android:layout_width="match_parent"
          android:layout_height="@dimen/user_img_size_xlarge"/>
    <EditText android:layout_width="match_parent"
              android:id="@+id/et_email"
              android:hint="Email Id"
              android:layout_marginLeft="@dimen/space_xx_large"
              android:layout_marginRight="@dimen/space_xx_large"
              android:padding="@dimen/space_medium"
              android:background="@drawable/border"
              android:layout_height="wrap_content"/>
    <View android:layout_width="match_parent"
          android:layout_height="@dimen/user_img_size_xlarge"/>
    <TextView android:layout_width="match_parent"
              android:text="Submit"
              android:id="@+id/txt_submit"
              android:layout_gravity="center"
              android:gravity="center"
              android:background="@drawable/login_selected"
              android:padding="@dimen/space_medium"
              android:textColor="@android:color/white"
              android:layout_marginLeft="@dimen/space_xx_large"
              android:layout_marginRight="@dimen/space_xx_large"
              android:layout_height="wrap_content"/>

</LinearLayout>